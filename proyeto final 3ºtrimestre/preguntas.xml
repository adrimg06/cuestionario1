<test>
  <question id="1">
    <wording>¿Cuál es el componente principal que actúa como el cerebro del ordenador?</wording>
    <choices>
      <choice correct="no">SSD</choice>
      <choice correct="yes">CPU</choice>
      <choice correct="no">RAM</choice>
      <choice correct="no">GPU</choice>
    </choices>
  </question>
  <question id="2">
    <wording>¿Qué componente se utiliza para almacenar datos permanentemente?</wording>
    <choices>
      <choice correct="no">RAM</choice>
      <choice correct="no">CPU</choice>
      <choice correct="yes">Disco duro / SSD</choice>
      <choice correct="no">Placa base</choice>
    </choices>
  </question>
